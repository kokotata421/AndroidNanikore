<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_game"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="0dp"
    android:padding="0dp"
    tools:context="com.kotakawanishi.nanikore.GameFragment">

    <!-- TODO: Update blank fragment layout -->

    <FrameLayout
        android:id="@+id/level_stage_label_frame_game"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="0dp"
        android:padding="0dp">

        <ImageView
            android:id="@+id/level_stage_label_game"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="0dp"
            android:padding="0dp"
            android:scaleType="fitXY"
            android:src="@drawable/level_stage_label" />

    </FrameLayout>

    <FrameLayout
        android:id="@+id/time_frame"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="0dp"
        android:padding="0dp">

        <ImageView
            android:id="@+id/time_left_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="0dp"
            android:padding="0dp"
            android:scaleType="fitXY"
            android:src="@drawable/time_left_view" />

    </FrameLayout>

</FrameLayout>
