<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.kotakawanishi.nanikore.CheckAnswerFragment">

    <!-- TODO: Update blank fragment layout -->

    <ScrollView
        android:id="@+id/scroll_view_check_answer"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <FrameLayout
            android:id="@+id/content_layout_check_answer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/answer_note_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="0dp"
                android:padding="0dp"
                android:scaleType="fitXY"
                android:src="@drawable/answer_note" />

            <ImageView
                android:id="@+id/background_check_answer"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="0dp"
                android:adjustViewBounds="true"
                android:padding="0dp"
                android:scaleType="fitXY"
                android:src="@drawable/main_background" />

            <ImageButton
                android:id="@+id/title_btn_check_answer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="0dp"
                android:padding="0dp"
                android:scaleType="fitXY"
                android:src="@drawable/title_btn" />

            <FrameLayout
                android:id="@+id/level_stage_frame_check_answer"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="0dp"
                android:padding="0dp">

                <ImageView
                    android:id="@+id/level_stage_label_check_answer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="0dp"
                    android:padding="0dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/level_stage_label" />
            </FrameLayout>

            <ImageButton
                android:id="@+id/play_again_btn_check_answer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="0dp"
                android:padding="0dp"
                android:scaleType="fitXY"
                android:src="@drawable/play_again_btn" />
        </FrameLayout>
    </ScrollView>
</FrameLayout>
