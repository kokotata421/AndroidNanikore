<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="0dp"
    android:padding="0dp"
    tools:context="com.kotakawanishi.nanikore.GameOverFragment">

    <!-- TODO: Update blank fragment layout -->

    <ImageButton
        android:id="@+id/next_stage_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="0dp"
        android:padding="0dp"
        android:scaleType="fitXY"
        android:src="@drawable/next_stage_btn"
        android:visibility="gone" />

    <ImageButton
        android:id="@+id/play_again_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="0dp"
        android:padding="0dp"
        android:scaleType="fitXY"
        android:src="@drawable/play_again_btn"
        android:visibility="gone" />

    <FrameLayout
        android:id="@+id/level_stage_label_frame_game_over"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="0dp"
        android:padding="0dp">

        <ImageView
            android:id="@+id/level_stage_label_game_over"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="0dp"
            android:padding="0dp"
            android:scaleType="fitXY"
            android:src="@drawable/level_stage_label" />

    </FrameLayout>

    <ImageView
        android:id="@+id/result_stamp_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="0dp"
        android:padding="0dp"
        android:scaleType="fitXY"
        android:src="@drawable/well_done_stamp_game_over"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/seal_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="0dp"
        android:padding="0dp"
        android:scaleType="fitXY"
        android:src="@drawable/seal"
        android:visibility="gone" />

    <ImageButton
        android:id="@+id/title_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="0dp"
        android:padding="0dp"
        android:scaleType="fitXY"
        android:src="@drawable/title_btn"
        android:visibility="gone" />

    <ImageButton
        android:id="@+id/check_answer_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="0dp"
        android:padding="0dp"
        android:scaleType="fitXY"
        android:src="@drawable/check_answer_btn"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/result_string_image_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="0dp"
        android:padding="0dp"
        android:scaleType="fitXY"
        android:src="@drawable/pass_label"
        android:visibility="gone" />

</FrameLayout>
